@page "/essaywriter"
<PageTitle>Essay Writer</PageTitle>
<RadzenSteps @bind-SelectedIndex=_step ShowStepsButtons=false>
    <Steps>
        <RadzenStepsItem>
            <RadzenRow>
                <RadzenColumn Size="8">
                    <RadzenStack JustifyContent="JustifyContent.Center">
                        <RadzenText TextAlign=TextAlign.Center Text="Hierarchical Chat (Everything runs through Admin)" TextStyle="TextStyle.Subtitle1"></RadzenText>
                        <RadzenButton Click="Next" Text="Start" Size="ButtonSize.Small"></RadzenButton>
                    </RadzenStack>
                    <RadzenImage Path="images/EssayWritingTransitions.png"></RadzenImage>
                </RadzenColumn>
            </RadzenRow>
        </RadzenStepsItem>
        <RadzenStepsItem>
            <GroupChat GroupChatType="GroupChatType.EssayWriter"></GroupChat>
        </RadzenStepsItem>
    </Steps>
</RadzenSteps>